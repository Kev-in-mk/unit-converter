    rows: 6

    RowLayout:
        TextInput:
            background_color: app.theme_cls.primary_color
            foreground_color: [1, 1, 1, 1]
            id: calc_input
            font_size: 110
            size_hint: None, None
            height: root.button_height * 1.2
            width: root.button_width * 5
            readonly: True
            multiline: False

    RowLayout:
#        SpecialButton:
#            background_color: [0, 0.5, 0, 1]
