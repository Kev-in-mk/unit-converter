<ZeroButton@Button>:
#    background_normal: ''
    background_color: app.theme_cls.primary_dark
    on_release: self.parent.parent.ids.calc_input.text += self.text
    size_hint: None, None
    font_size: self.parent.parent.button_font_size
    width: self.parent.parent.button_width
    height: self.parent.parent.button_height * 2
<NumberButton@Button>:
#    background_normal: ''
    background_color: app.theme_cls.primary_light
    on_release: self.parent.parent.ids.calc_input.text += self.text
    size_hint: None, None
    font_size: self.parent.parent.button_font_size
    width: self.parent.parent.button_width
    height: self.parent.parent.button_height
<SpecialButton@Button>:

#    background_normal: ''
    background_color: app.theme_cls.primary_light
    size_hint: None, None
    font_size: self.parent.parent.button_font_size / 2
    width: self.parent.parent.button_width
    height: self.parent.parent.button_height
#    background_color: [0, 0, 1, 1]
<ClearButton@Button>:
#    background_normal: ''
    background_color: app.theme_cls.primary_color
    size_hint: None, None
    font_size: self.parent.parent.button_font_size / 2
    width: self.parent.parent.button_width
    height: self.parent.parent.button_height * 2


<RowLayout@BoxLayout>:
    size_hint: None, None

