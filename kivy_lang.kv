#            on_release: self.parent.parent.calc_error()






        SpecialButton:
#            background_color: [0, 0.9, 0, 1]
            text: 'C to F'
            on_release: self.parent.parent.c_to_f()


        SpecialButton:
#            background_color: [0, 0.9, 0, 1]
            text: 'Foot to Cm'
            on_release: self.parent.parent.foot_to_cm()

